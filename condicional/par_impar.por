//código que você verifica se é par ou ímpar 

programa {
  funcao inicio() {
    

		inteiro numero 
		
		escreva("digite um numero")
		leia(numero)
		
		se(numero %2 == 0)
		{
			escreva("o numero e par")
		}
		senao 
		{
			escreva("o numero é impar")
		}
	}
}
  

